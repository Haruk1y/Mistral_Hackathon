    "wandb:report:assets": "node scripts/wandb/generate_report_assets.mjs",
    "wandb:failures:analyze": "node scripts/wandb/generate_weave_failure_playbook.mjs",
    "loop:cycle": "node scripts/loop/run_self_improvement_cycle.mjs",
    "loop:cycle:resilient": "WANDB_MCP_ENABLED=true WANDB_MCP_RETRY_MAX=5 WANDB_MCP_RETRY_BACKOFF_MS=1200 WANDB_MCP_TRY_LOCAL_HTTP=true node scripts/loop/run_self_improvement_cycle.mjs"
