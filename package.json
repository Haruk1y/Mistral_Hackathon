    "eval:radar:test": "node scripts/eval/generate_test_model_radar.mjs",
    "wandb:evals:publish": "uv run scripts/wandb/publish_eval_comparison.py",
    "eval:freeze": "node scripts/eval/generate_frozen_eval_set.mjs",
    "ft:generate": "node scripts/ft/generate_teacher_pairs.mjs",
    "ft:filter": "node scripts/ft/quality_filter.mjs",
    "ft:split": "node scripts/ft/build_train_valid_test.mjs",
    "ft:resplit:train-only": "node scripts/ft/resplit_from_train_only.mjs",
    "ft:jobs": "node scripts/ft/mistral_ft_jobs.mjs",
