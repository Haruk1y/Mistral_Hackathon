    "hf:prize:check": "node scripts/hf/check_prize_readiness.mjs",
    "wandb:mcp:fetch": "node scripts/wandb/fetch_mcp_eval_context.mjs",
    "wandb:mcp:fetch:resilient": "WANDB_MCP_ENABLED=true WANDB_MCP_RETRY_MAX=5 WANDB_MCP_RETRY_BACKOFF_MS=1200 WANDB_MCP_TRY_LOCAL_HTTP=true node scripts/wandb/fetch_mcp_eval_context.mjs",
